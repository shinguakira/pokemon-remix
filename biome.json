{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "ignore": ["**/p5.min.js"]
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "tab",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noUselessTypeConstraint": "warn",
        "useLiteralKeys": "warn",
        "useOptionalChain": "warn"
      },
      "correctness": {
        "noUnusedImports": "warn",
        "noUnusedVariables": "warn",
        "noUnusedPrivateClassMembers": "warn",
        "useExhaustiveDependencies": "warn",
        "useHookAtTopLevel": "error"
      },
      "style": {
        "noNonNullAssertion": "off",
        "useConst": "warn",
        "useImportType": "warn",
        "useExportType": "warn",
        "useEnumInitializers": "warn",
        "useShorthandArrayType": "warn",
        "noInferrableTypes": "warn",
        "useTemplate": "warn",
        "useSelfClosingElements": "warn",
        "useNumberNamespace": "warn"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noConfusingVoidType": "warn",
        "noEmptyInterface": "warn",
        "useAwait": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingCommas": "es5"
    },
    "globals": ["p5"]
  }
}
